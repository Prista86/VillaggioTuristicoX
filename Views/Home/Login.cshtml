@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model LoginModel
@using Microsoft.AspNetCore.Identity
@using MVC_TDPC13.DB.Entities
@inject SignInManager<User> SignInManager

<div id="bg1">
    <img id="full-screen-width" src="https://franber.be/wp-content/uploads/2022/06/fondoLogin.png" alt="A happy dog looking out a door window">
    <span><h2>Log In</h2></span>
</div>
<br><br><br>

@if (!SignInManager.IsSignedIn(User))
{
    <div class="container">




















        <div class="row">
            <div class="fonttesto col-6">
                <br>
                <h4>BENVENUTO NEL SISTEMA UFFICIALE DI PRENOTAZIONE</h4>
                <br>
                <p>
                    Accedi inserendo i dati richiesti per prenotare un soggiorno in un luogo <br>di eccellenza pensato per la cura delle emozioni.<br>
                    Ideale per ricollegarsi con il proprio sé
                </p>
            </div>
            
            <div class="fonttesto col-6 borderlogin">
                <div id="divLogin">
                    <p id="plogin">Esegui il login per accedere alla tua pagina personale!</p>
                    
                </div>
                <br>
                <form asp-action="Login" asp-controller="Home" method="post" style="text-align:center">
                    <div class="form-group">
                        <label asp-for="@Model.UserName"></label>
                        <input asp-for="@Model.UserName" class="form-control" />
                    </div><br>
                    <div class="form-group">
                        <label asp-for="@Model.Password"></label>
                        <input asp-for="@Model.Password" class="form-control" />
                    </div><br>
                    <input type="submit" style="background-color:#45312a" class="btn btn-dark" value="Login" /><br>
                </form>
            </div>

        </div>
        <br><br><br>
    </div>
}
else
{
    <div>Sei già loggato</div>
}
































